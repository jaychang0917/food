<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <!-- Base application theme. -->
    <style name="Base.V0.Theme.Food" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- App palette-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnBackground">@color/on_background_primary</item>
        <item name="colorOnSurface">@color/on_surface_primary</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Food" parent="Base.V0.Theme.Food" />

    <style name="Theme.Food.Launcher">
        <item name="android:windowBackground">@drawable/root_launcher_splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
