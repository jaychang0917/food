<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="TextField" tools:ignore="ResourceName">
        <attr name="android:hint" format="string|reference" />
        <attr name="android:text" format="string|reference" />
        <attr name="editable" format="boolean|reference" />
        <attr name="prefix" format="string|reference" />
        <attr name="leadingIcon" format="reference" />
        <attr name="type">
            <flag name="text" value="0x00" />
            <flag name="password" value="0x01" />
            <flag name="phone" value="0x02" />
        </attr>
        <attr name="android:imeOptions" format="reference" />
    </declare-styleable>
</resources>
