<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phoneView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@drawable/ui_textfield_grey_bg"
    tools:gravity="center_vertical"
    tools:minHeight="40dp"
    tools:orientation="horizontal"
    tools:padding="@dimen/spacing_small"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/leadingIconView"
        android:layout_width="32dp"
        android:layout_height="23dp" />

    <TextView
        android:id="@+id/prefixTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Food.Body1"
        android:textColor="@color/on_background_primary"
        android:layout_marginStart="@dimen/spacing_small"
        tools:text="852" />

    <com.jaychang.food.ui.textfield.ViewOnlyEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:background="@null"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Food.Body1"
        android:textColor="@color/on_background_primary"/>

</merge>
